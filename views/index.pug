extends layout

block content
  div
    ul(role="list" class="mt-3 grid grid-cols-1 gap-5 sm:grid-cols-2 sm:gap-6 lg:grid-cols-4")
      each item in data
        li(class="col-span-1 flex rounded-md shadow-sm")
          div(class="flex w-16 flex-shrink-0 items-center justify-center bg-indigo-500 rounded-l-md text-sm font-medium text-white")= item.title.substring(0, 2)
          div(class="flex flex-1 items-center justify-between truncate rounded-r-md border border-slate-500 bg-slate-800")
            div(class="flex-1 truncate px-4 py-2 text-sm")
              a(href=item.url class="font-medium text-white")= item.title
              p(class="text-slate-400")= item.url
            div(class="flex-shrink-0 pr-2")
              a(href=`/edit/${item.id}` class="myButton inline-flex h-8 w-8 items-center justify-center rounded-full bg-transparent text-slate-400")
                svg(class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor")
                  path(d="M10 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM10 8.5a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM11.5 15.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z")
