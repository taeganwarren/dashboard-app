doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/tailwind.css')
  body(class="bg-white")
    header
      nav(class="bg-white shadow")
        div(class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8")
          div(class="flex h-16 justify-between")
            div(class="flex")
              div(class="ml-6 flex space-x-8")
                a(href="/" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-black hover:border-gray-300 hover:text-gray-700") Home
                a(href="/archive" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-black hover:border-gray-300 hover:text-gray-700") All links
            div(class="flex items-center")
              div(class="flex-shrink-0")
                a(href="/submit" class="relative inline-flex items-center gap-x-1.5 rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Add site
    div(class="mx-auto max-w-7xl py-4 px-4 sm:px-6 lg:px-8")
      block content